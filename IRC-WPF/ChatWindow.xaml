<Window x:Class="IRC_WPF.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IRC_WPF"
        mc:Ignorable="d"
        Title="ChatWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Chat Messages -->
        <TextBox Name="ChatHistory" IsReadOnly="True" VerticalScrollBarVisibility="Auto" Margin="10" Grid.Row="0" />

        <!-- Message Input -->
        <StackPanel Orientation="Horizontal" Margin="10" Grid.Row="1">
            <TextBox Name="MessageInput" Width="450" Margin="0,0,10,0" />
            <Button Content="Send" Width="80" Click="SendButton_Click" />
        </StackPanel>
    </Grid>
</Window>
