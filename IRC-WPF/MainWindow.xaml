<Window x:Class="IRC_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IRC_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="200" />
        </Grid.ColumnDefinitions>

        <!-- بخش چت -->
        <TabControl Name="ChatTabs" Margin="10" Grid.Column="0" Width="560">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="HeaderTemplate">
                        <Setter.Value>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding}" Margin="0,0,5,0" />
                                    <Button Content="X" Width="20" Height="20" 
                                            Click="CloseTab_Click" 
                                            Background="Transparent" 
                                            BorderThickness="0" 
                                            Tag="{Binding RelativeSource={RelativeSource AncestorType={x:Type TabItem}}}" 
                                            Foreground="Red" />
                                </StackPanel>
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>
            <TabItem Header="General Chat">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Chat Area -->
                    <TextBox Name="ChatBox" IsReadOnly="True" VerticalScrollBarVisibility="Auto" Margin="10" Grid.Row="0" />

                    <!-- Message Input -->
                    <StackPanel Orientation="Horizontal" Margin="10" Grid.Row="1">
                        <TextBox Name="MessageInput" Width="400" Margin="0,0,10,0" />
                        <Button Content="Send" Width="80" Click="SendButton_Click" />
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- لیست کاربران و کانال‌ها -->
        <TabControl Margin="10" Grid.Column="1" Width="150">
            <TabItem Header="Users">
                <ListBox Name="UsersList">
                    <ListBox.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Chat" Click="UserChatMenuItem_Click" />
                        </ContextMenu>
                    </ListBox.ContextMenu>
                </ListBox>
            </TabItem>
            <TabItem Header="Channels">
                <ListBox Name="ChannelsList">
                    <ListBox.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Join Chat" Click="ChannelChatMenuItem_Click" />
                        </ContextMenu>
                    </ListBox.ContextMenu>
                </ListBox>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
